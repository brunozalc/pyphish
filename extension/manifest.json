{
  "manifest_version": 2,
  "name": "PyPhish Sentinel",
  "version": "0.1.0",
  "description": "Monitoramento em tempo real contra phishing com o analisador PyPhish.",
  "browser_specific_settings": {
    "gecko": {
      "id": "pyphish-sentinel@example.com",
      "strict_min_version": "102.0"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "background": {
    "scripts": [
      "shared/constants.js",
      "shared/messages.js",
      "background/state.js",
      "background/api.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/messages.js", "content/detector.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "PyPhish Sentinel",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  },
  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "ui/warning.html",
    "ui/warning.css",
    "ui/warning.js",
    "content/overlay.css"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:5000 http://127.0.0.1:5000 https://*"
}
